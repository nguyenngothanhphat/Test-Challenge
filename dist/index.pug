mixin link(href, name)
  a(class!=attributes.class href=href)= name
mixin menu-item(href, name)
  li.menu-item
    a(href="#" class="menu-link")=name 
mixin class-item(img, alt, title, description)
  li
    figure
      img(src=img, alt=alt)
    h3.item-title=title
    p.item-description=description
mixin stats-item(title, description)
  li
    h3.item-title=title
    p.item-description=description
